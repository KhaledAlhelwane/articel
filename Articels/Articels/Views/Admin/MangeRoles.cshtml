@model Articels.ViewModel.UserRoleViewModel

@{
    ViewData["Title"] = "MangeRoles";
}
<form method="post" >
    <div class="card-header">
        <h2>@Model.UserName</h2>
        Add/Remove Role
        <div class="card-body">
            <input type="hidden" asp-for="UserId"/>
           	@for(int i=0;i<Model.roles.Count();i++)
			{
				<div class="form-check m-1">
					<input type="hidden" asp-for="@Model.roles[i].Name"/>
					<input asp-for="@Model.roles[i].CheckingRole" class="form-check-input"/>
					<label asp-for="@Model.roles[i].CheckingRole" class="form-check-label">
						@Model.roles[i].Name
					</label>

				</div>
			}
			<div asp-validation-summary="All" class="text-danger"></div>
		
        </div>
		<div class="card-footer mt-2">
			<input type="submit" class="btn btn-primary"/>
			<a asp-action="UserRolesIndex" class="btn btn-secondary"><i class="bi bi-arrow-return-left"></i> Cancle</a>
		</div>

    </div>

</form>


